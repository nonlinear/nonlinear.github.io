{{ $pages := where (where .Site.RegularPages "Section" "ne" "curva") "Params.status" "live" }}
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
  <channel>
    <title>{{ .Site.Title }}</title>
    <link>{{ .Site.BaseURL }}</link>
    <description>{{ .Site.Params.description | default "Feed RSS" }}</description>

    {{ if gt (len $pages) 0 }}
      {{ range $pages }}
      <item>
        <title>{{ .Title }}</title>
        <link>{{ .Permalink }}</link>
        <guid>{{ .Permalink }}</guid>
        <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
        <description><![CDATA[{{ .Summary }}]]></description>
      </item>
      {{ end }}
    {{ else }}
      <item>
        <title>No posts yet</title>
        <link>{{ .Site.BaseURL }}</link>
        <guid>{{ .Site.BaseURL }}#noposts</guid>
        <pubDate>{{ now.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
        <description>No posts available.</description>
      </item>
    {{ end }}
  </channel>
</rss>
